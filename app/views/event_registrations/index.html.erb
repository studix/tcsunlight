<h1>Anmeldungen</h1>

<table class="table">
  <tr>
    <th>Event</th>
    <th>E-Mail</th>
    <th>Name</th>
    <th>Vorname</th>
    <th>Anzahl Personen</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @event_registrations.each do |event_registration| %>
  <tr>
    <td><%= event_registration.event.title %></td>
    <td><%= event_registration.Email %></td>
    <td><%= event_registration.Name %></td>
    <td><%= event_registration.Vorname %></td>
    <td><%= event_registration.num_persons %></td>
    <td><%= link_to 'Destroy', event_registration, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

